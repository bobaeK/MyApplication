<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GPSActivity">
    <GridLayout
        android:id="@+id/latlonInfo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:columnCount="2"
        android:rowCount="2"
        >

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:id="@+id/latitude"
            android:text="위도"
            />

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:id="@+id/longitude"
            android:text="경도"
            />

        <TextView
            android:text="위도위치!"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:id="@+id/tv_latitude"
            />

        <TextView
            android:text="경도위치!"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:id="@+id/tv_longitude"
            />

    </GridLayout>


    <GridLayout
        android:id="@+id/speedInfo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:columnCount="2"
        android:rowCount="2"
        >

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:id="@+id/current"
            android:text="현재속도"
            />

        <TextView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:id="@+id/Maximum"
            android:text="최고속도"
            />

        <TextView
            android:text=" 현재속도가 바뀐다"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:id="@+id/tv_current"
            />

        <TextView
            android:text="최고속도가 바뀐다."
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:id="@+id/tv_maximum"
            />

    </GridLayout>


    <com.github.anastr.speedviewlib.AwesomeSpeedometer
        android:id="@+id/awsomeSpeedmeter"
        android:layout_width="181dp"
        android:layout_height="176dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapButton"
        android:src="@drawable/gomap"
        android:onClick="goMap"
        android:text="맵화면"
        />
</android.support.constraint.ConstraintLayout>